{
  "name": "emaus",
  "private": true,
  "scripts": {
    "build": "NODE_OPTIONS='--max-old-space-size=16384' turbo build",
    "build:lowmem": "NODE_OPTIONS='--max-old-space-size=3072' turbo build --concurrency=2",
    "build:prod": "NODE_OPTIONS='--max-old-space-size=4096' turbo build --concurrency=1",
    "build:vps": "NODE_OPTIONS='--max-old-space-size=1536' turbo build --concurrency=1",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "clean": "find . -name dist -type d -exec rm -rf {} + 2>/dev/null || true && find . -name .turbo -type d -exec rm -rf {} + 2>/dev/null || true && find . -name '.vite' -type d -exec rm -rf {} + 2>/dev/null || true",
    "clean:all": "rm -rf node_modules pnpm-lock.yaml && find apps packages -name node_modules -type d -exec rm -rf {} + 2>/dev/null || true",
    "migration:run": "pnpm --filter api migration:run",
    "migration:create": "pnpm --filter api migration:create",
    "migration:show": "pnpm --filter api migration:show",
    "migration:revert": "pnpm --filter api migration:revert",
    "db:seed": "pnpm --filter api db:seed",
    "render-build": "pnpm install --frozen-lockfile && pnpm --filter api build",
    "render-start": "cd apps/api && pnpm start"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "prettier": "^3.6.2",
    "turbo": "^2.5.6",
    "typescript": "^5.9.3"
  },
  "packageManager": "pnpm@8.15.9+sha512.499434c9d8fdd1a2794ebf4552b3b25c0a633abcee5bb15e7b5de90f32f47b513aca98cd5cfd001c31f0db454bc3804edccd578501e4ca293a6816166bbd9f81",
  "dependencies": {
    "@types/google.maps": "^3.58.1"
  }
}
