{
  "testEnvironment": "node",
  "roots": ["<rootDir>/src"],
  "testMatch": [
    "**/__tests__/**/*.test.ts",
    "**/tests/**/*.test.ts"
  ],
  "testPathIgnorePatterns": [
    "/node_modules/",
    "/dist/",
    "/__tests__.bak/"
  ],
  "transform": {
    "^.+\\.ts$": ["ts-jest", {
      "tsconfig": "tsconfig.json"
    }]
  },
  "moduleNameMapper": {
    "^@/(.*)$": "<rootDir>/src/$1"
  },
  "collectCoverageFrom": [
    "src/**/*.ts",
    "!src/**/*.d.ts",
    "!src/tests/**",
    "!src/cli/**",
    "!src/migrations/**"
  ],
  "coverageDirectory": "coverage",
  "coverageReporters": ["text", "lcov", "html"],
  "coverageThreshold": {
    "global": {
      "branches": 50,
      "functions": 50,
      "lines": 50,
      "statements": 50
    }
  },
  "setupFilesAfterEnv": ["<rootDir>/src/tests/jest.setup.ts"],
  "resetModules": true
}