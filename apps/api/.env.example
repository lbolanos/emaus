# Database Configuration
DB_TYPE=sqlite
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=password
DB_DATABASE=emaus

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Application Configuration
FRONTEND_URL=http://localhost:5173
SESSION_SECRET=your_secret_key_here
PORT=3001

# Migration Configuration
MIGRATIONS_AUTO_RUN=true
MIGRATIONS_WARN_ONLY=true
MIGRATIONS_DRY_RUN=false
MIGRATIONS_LOG_LEVEL=info
MIGRATIONS_MAX_PENDING=5

# Seed Configuration
SEED_AUTO_RUN=true
SEED_DRY_RUN=false
SEED_FORCE=false
SEED_MASTER_USER_EMAIL=admin@example.com
SEED_MASTER_USER_NAME=Administrator
SEED_MASTER_USER_PASSWORD=secure_password_here

# SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
SMTP_FROM=noreply@emaus.com
