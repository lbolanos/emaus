{
  "name": "api",
  "version": "1.0.0",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "vite-node --require dotenv/config src/index.ts",
    "dev:postgres": "DB_TYPE=postgresql pnpm dev",
    "dev:sqlite": "DB_TYPE=sqlite pnpm dev",
    "build": "vite build && tsc -p tsconfig.migrations.json",
    "start": "node dist/index.js",
    "clean": "rm -rf dist .turbo node_modules/.tmp 2>/dev/null || true",
    "lint": "eslint src --ext .ts",
    "db:seed": "vite-node --require dotenv/config src/cli/migration-cli.ts run --name 'SeedInitialData'",
    "db:seed:force": "SEED_FORCE=true pnpm db:seed",
    "db:seed:postgres": "DB_TYPE=postgresql pnpm db:seed",
    "db:seed:sqlite": "DB_TYPE=sqlite pnpm db:seed",
    "migration:create": "vite-node --require dotenv/config src/cli/migration-cli.ts create",
    "migration:run": "vite-node --require dotenv/config src/cli/migration-cli.ts run",
    "migration:revert": "vite-node --require dotenv/config src/cli/migration-cli.ts revert",
    "migration:show": "vite-node --require dotenv/config src/cli/migration-cli.ts show",
    "migration:init": "vite-node --require dotenv/config src/cli/migration-cli.ts init",
    "migration:run:prod": "node --require dotenv/config dist/cli/migration-cli.js run",
    "migration:revert:prod": "node --require dotenv/config dist/cli/migration-cli.js revert",
    "migration:show:prod": "node --require dotenv/config dist/cli/migration-cli.js show",
    "migration:run:postgres": "DB_TYPE=postgresql pnpm migration:run",
    "migration:run:sqlite": "DB_TYPE=sqlite pnpm migration:run",
    "migration:create:postgres": "DB_TYPE=postgresql pnpm migration:create",
    "migration:create:sqlite": "DB_TYPE=sqlite pnpm migration:create",
    "migration:show:postgres": "DB_TYPE=postgresql pnpm migration:show",
    "migration:show:sqlite": "DB_TYPE=sqlite pnpm migration:show"
  },
  "dependencies": {
    "@repo/types": "workspace:*",
    "@repo/utils": "workspace:*",
    "@types/node-cron": "^3.0.11",
    "bcrypt": "^5.1.1",
    "cache-manager": "^7.2.0",
    "commander": "^12.0.0",
    "connect-typeorm": "^2.0.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "express-rate-limit": "^7.1.5",
    "express-session": "^1.18.0",
    "helmet": "^8.1.0",
    "node-cache": "^5.1.2",
    "node-cron": "^4.2.1",
    "nodemailer": "^6.9.7",
    "passport": "^0.7.0",
    "passport-google-oauth20": "^2.0.0",
    "passport-local": "^1.0.0",
    "pg": "^8.11.3",
    "reflect-metadata": "^0.2.1",
    "sqlite3": "^5.1.6",
    "typeorm": "^0.3.17",
    "uuid": "^9.0.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@repo/config": "workspace:*",
    "@repo/tsconfig": "workspace:*",
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/express-serve-static-core": "^4.19.5",
    "@types/express-session": "^1.17.10",
    "@types/node": "^20.11.24",
    "@types/nodemailer": "^6.4.14",
    "@types/passport": "^1.0.16",
    "@types/passport-google-oauth20": "^2.0.14",
    "@types/passport-local": "^1.0.38",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "prettier": "^3.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "vite": "^7.1.10",
    "vite-node": "^1.3.1",
    "vite-plugin-node": "^3.0.0"
  }
}