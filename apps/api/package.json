{
  "name": "api",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "vite-node --require dotenv/config src/index.ts",
    "dev:postgres": "DB_TYPE=postgresql pnpm dev",
    "dev:sqlite": "DB_TYPE=sqlite pnpm dev",
    "build": "tsc",
    "start": "node dist/index.js",
    "db:seed": "vite-node --require dotenv/config src/cli/migration-cli.ts run --name 'SeedInitialData'",
    "db:seed:force": "SEED_FORCE=true pnpm db:seed",
    "db:seed:postgres": "DB_TYPE=postgresql pnpm db:seed",
    "db:seed:sqlite": "DB_TYPE=sqlite pnpm db:seed",
    "migration:create": "vite-node --require dotenv/config src/cli/migration-cli.ts create",
    "migration:run": "vite-node --require dotenv/config src/cli/migration-cli.ts run",
    "migration:revert": "vite-node --require dotenv/config src/cli/migration-cli.ts revert",
    "migration:show": "vite-node --require dotenv/config src/cli/migration-cli.ts show",
    "migration:init": "vite-node --require dotenv/config src/cli/migration-cli.ts init",
    "migration:run:postgres": "DB_TYPE=postgresql pnpm migration:run",
    "migration:run:sqlite": "DB_TYPE=sqlite pnpm migration:run",
    "migration:create:postgres": "DB_TYPE=postgresql pnpm migration:create",
    "migration:create:sqlite": "DB_TYPE=sqlite pnpm migration:create",
    "migration:show:postgres": "DB_TYPE=postgresql pnpm migration:show",
    "migration:show:sqlite": "DB_TYPE=sqlite pnpm migration:show"
  },
  "dependencies": {
    "@repo/types": "workspace:*",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "express-session": "^1.18.0",
    "passport": "^0.7.0",
    "passport-google-oauth20": "^2.0.0",
    "passport-local": "^1.0.0",
    "pg": "^8.11.3",
    "reflect-metadata": "^0.2.1",
    "sqlite3": "^5.1.6",
    "typeorm": "^0.3.17",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@repo/tsconfig": "workspace:*",
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/express-session": "^1.17.10",
    "@types/node": "^20.11.24",
    "@types/passport": "^1.0.16",
    "@types/passport-google-oauth20": "^2.0.14",
    "@types/passport-local": "^1.0.38",
    "commander": "^12.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "vite-node": "^1.3.1"
  }
}