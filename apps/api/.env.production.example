# Database Configuration
DB_TYPE=sqlite
# DB_TYPE=postgresql

# SQLite Configuration (when DB_TYPE=sqlite)
DB_DATABASE=database.sqlite

# PostgreSQL Configuration (when DB_TYPE=postgresql)
# DB_HOST=your_postgres_host
# DB_PORT=5432
# DB_USERNAME=emaus_user
# DB_PASSWORD=your_database_password
# DB_DATABASE=emaus

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Application Configuration
FRONTEND_URL=https://your-domain.com
SESSION_SECRET=your_secure_random_session_secret_here
PORT=3001

# Migration Configuration
MIGRATIONS_AUTO_RUN=true
MIGRATIONS_WARN_ONLY=true
MIGRATIONS_DRY_RUN=false
MIGRATIONS_LOG_LEVEL=info
MIGRATIONS_MAX_PENDING=10

# Seed Configuration
SEED_AUTO_RUN=false
SEED_DRY_RUN=false
SEED_FORCE=false
SEED_MASTER_USER_EMAIL=admin@your-domain.com
SEED_MASTER_USER_NAME=Administrator
SEED_MASTER_USER_PASSWORD=your_secure_password_here

# SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=465
SMTP_SECURE=true
SMTP_USER=your_email@your-domain.com
SMTP_PASS=your_app_password
SMTP_FROM=noreply@your-domain.com

# Avatar Storage Configuration
# Options: base64 (store in database), s3 (AWS S3 storage)
AVATAR_STORAGE=s3

# AWS S3 Configuration (required when AVATAR_STORAGE=s3)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
S3_BUCKET_NAME=emaus-media

# S3 Storage Prefixes (for different content types)
S3_AVATARS_PREFIX=avatars/
S3_RETREAT_MEMORIES_PREFIX=retreat-memories/
S3_DOCUMENTS_PREFIX=documents/
S3_PUBLIC_ASSETS_PREFIX=public-assets/

# Legacy S3_BUCKET_PREFIX (backward compatibility)
S3_BUCKET_PREFIX=avatars/

# Google reCAPTCHA Configuration
RECAPTCHA_SECRET_KEY=your_recaptcha_secret_key
