{
  "name": "web",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "dev": "vite",
    "build": "NODE_OPTIONS='--max-old-space-size=1536' vue-tsc --noEmit --skipLibCheck && NODE_OPTIONS='--max-old-space-size=1536' vite build --mode production --sourcemap false --minify false",
    "build:vps": "NODE_OPTIONS='--max-old-space-size=1536' vue-tsc --noEmit --skipLibCheck && NODE_OPTIONS='--max-old-space-size=1536' vite build --mode production --sourcemap false --minify false",
    "preview": "vite preview",
    "clean": "rm -rf dist .turbo .vite node_modules/.tmp 2>/dev/null || true",
    "lint": "eslint src --ext .vue,.ts,.js",
    "test": "vitest run --passWithNoTests",
    "test:dev": "vitest",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:unit": "vitest run src/components/__tests__",
    "test:stores": "vitest run src/stores/__tests__",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:excel-import": "vitest run --reporter=verbose src/components/__tests__/ImportParticipantsModal.test.ts"
  },
  "dependencies": {
