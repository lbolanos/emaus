{
  "extends": "@repo/tsconfig/base.json",
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist/types",
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["vite.config.ts", "src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue", "src/**/*.json", "src/vite-env.d.ts"],
  "exclude": ["node_modules", "dist", "src/**/*.test.*", "src/**/__tests__/**", "src/**/__tests__.bak/**", "src/test/**"]
}